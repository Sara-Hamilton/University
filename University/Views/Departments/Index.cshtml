@{
  Layout = "_Layout";
}

<h1>University</h1>
<hr />
<h2>Departments:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var department in Model)
    {
      <li>@department.GetName()</li>
    }
  </ul>
}
<h4><a href="/departments/new">Add a new department</a></h4>
<h4><a href="/">Return home</a></h4>
