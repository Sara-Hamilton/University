@{
  Layout = "_Layout";
}

<h1>Add a new student</h1>
<form action="/students" method="post">
  <label for="student-name">Student name:</label>
  <input id="student-name" name="student-name" type="text">
  <label for="student-date">Enroll date:</label>
  <input type="date" name="student-date" value="student-date">

  <label for="department-id">Department:</label>
  <select class="" name="department-id">
    @foreach(var department in Model)
    {
      <option value='@department.GetId()'>@department.GetName()</option>
    }
  </select>

  <button type="submit">Add new student</button>
</form>
<p><a href="/">Back home</a></p>
<p><a href="/students">View all students</a></p>
